@page "/weather"
@attribute [StreamRendering]

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates showing data (kept from the template).</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Date</th><th>Temp. (C)</th><th>Temp. (F)</th><th>Summary</th></tr>
        </thead>
        <tbody>
            @foreach (var f in forecasts)
            {
                <tr>
                    <td>@f.Date.ToShortDateString()</td>
                    <td>@f.TemperatureC</td>
                    <td>@f.TemperatureF</td>
                    <td>@f.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code{
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(300);
        var start = DateOnly.FromDateTime(DateTime.Now);
        var sums = new[] {"Freezing","Bracing","Chilly","Cool","Mild","Warm","Balmy","Hot","Sweltering","Scorching"};
        forecasts = Enumerable.Range(1,5).Select(i => new WeatherForecast {
            Date = start.AddDays(i),
            TemperatureC = Random.Shared.Next(-10,36),
            Summary = sums[Random.Shared.Next(sums.Length)]
        }).ToArray();
    }

    private class WeatherForecast { public DateOnly Date {get;set;} public int TemperatureC {get;set;} public string? Summary {get;set;} public int TemperatureF => 32 + (int)(TemperatureC / 0.5556); }
}
