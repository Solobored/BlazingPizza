@page "/myorders"
@using BlazingPizza.Data
@inject HttpClient Http

<h2>My Orders</h2>

@if (orders == null)
{
    <p>Loading...</p>
}
else if (!orders.Any())
{
    <div class="card">
        <p>You have no orders yet. Try ordering a pizza!</p>
        <a class="btn btn-primary" href="/">Order now</a>
    </div>
}
else
{
    <div class="orders-list">
        @foreach (var order in orders)
        {
            <div class="order-card card">
                <div class="order-row">
                    <div class="order-meta">
                        <strong>Order #@order.OrderId</strong>
                        <div class="muted">@order.CreatedTime.ToLocalTime().ToString("g")</div>
                    </div>
                    <div>
                        <a class="btn btn-ghost" href="/orderdetail/@order.OrderId">View</a>
                    </div>
                </div>
                <div class="order-items">
                    @foreach (var p in order.Order.Pizzas)
                    {
                        <div class="order-item">
                            <span>@p.Special?.Name</span>
                            <span>Â£@p.GetFormattedTotalPrice()</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@code {
    private List<OrderWithStatus>? orders;

    protected override async Task OnInitializedAsync()
    {
        orders = await Http.GetFromJsonAsync<List<OrderWithStatus>>("orders");
    }
}
