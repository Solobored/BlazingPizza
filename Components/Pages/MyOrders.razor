@page "/myorders"
@using BlazingPizza.Data
@inject HttpClient Http

<h3>My Orders</h3>

@if (orders == null)
{
    <p>Loading...</p>
}
else if (!orders.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var order in orders)
        {
            <li class="list-group-item">
                <a href="/orderdetails/@order.OrderId">
                    Order #@order.OrderId - @order.CreatedTime.ToLocalTime()
                </a>
            </li>
        }
    </ul>
}

@code {
    private List<OrderWithStatus>? orders;

    protected override async Task OnInitializedAsync()
    {
        orders = await Http.GetFromJsonAsync<List<OrderWithStatus>>("orders");
    }
}
