@page "/orderdetail/{orderId:int}"
@using BlazingPizza.Data
@inject HttpClient Http
@inject NavigationManager NavManager

<h2>Order details</h2>

@if (order == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card order-detail">
        <div class="order-header">
            <strong>Order #@order.Order.OrderId</strong>
            <div class="muted">@order.Order.CreatedTime.ToLocalTime().ToString("g")</div>
        </div>

        <div class="order-items">
            @foreach (var p in order.Order.Pizzas)
            {
                <div class="order-item">
                    <div>
                        @p.Special?.Name 
                        <small class="muted">(@p.Size)</small>
                    </div>
                    <div>£@p.GetFormattedTotalPrice()</div>
                </div>
            }
        </div>

        <div class="order-total">
            <strong>Total: £@order.Order.GetFormattedTotalPrice()</strong>
        </div>

        <div style="margin-top: 12px;">
            <a class="btn btn-primary" href="/">Back to shop</a>
        </div>
    </div>
}

@code {
    [Parameter] public int orderId { get; set; }

    OrderWithStatus? order;

    protected override async Task OnInitializedAsync()
    {
        order = await Http.GetFromJsonAsync<OrderWithStatus>($"orders/{orderId}");
    }
}
